---
import { menuLinks } from '@/site-config';
---

{/* Use flex-col to stack the top bar and mobile menu, flex-wrap for potential wrapping issues */}
<header class='relative mb-12 flex w-full flex-col flex-wrap pb-3 text-sm'>
	{/* Top Bar Container: Logo and Buttons */}
	<div class="mx-auto flex w-full items-center justify-between">
		{/* Logo */}
		<a class='flex-none text-xl font-semibold' href='/' aria-label='Brand'>Mohammad Wasil</a>

		{/* --- Desktop Navigation Links & Dark Mode --- */}
		{/* Moved desktop nav here, hidden below sm */}
		<nav class="hidden items-center space-x-8 sm:flex" id="desktop-navigation">
			{menuLinks.map(link => (
				<a
					href={link.path}
					class="text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 text-sm font-medium"
				>
					{link.title}
				</a>
			))}
			{/* Desktop Dark Mode Toggle */}
			<button
				id='toggleDarkModeDesktop' {/* Changed ID */}
				class='relative rounded-md border border-gray-300 dark:border-gray-600 p-1.5 transition-all hover:bg-gray-100 dark:hover:bg-gray-700'
			>
				<span class='sr-only'>Dark Theme</span>
				{/* Sun Icon */}
				<svg xmlns='http://www.w3.org/2000/svg' width='32' height='32' viewBox='0 0 24 24' class='h-[1.2rem] w-[1.2rem] rotate-0 scale-100 transition-all dark:hidden dark:-rotate-90 dark:scale-0'><path fill='currentColor' d='M12 15q1.25 0 2.125-.875T15 12q0-1.25-.875-2.125T12 9q-1.25 0-2.125.875T9 12q0 1.25.875 2.125T12 15m0 1q-1.671 0-2.836-1.164T8 12q0-1.671 1.164-2.836T12 8q1.671 0 2.836 1.164T16 12q0 1.671-1.164 2.836T12 16m-7-3.5H1.5v-1H5zm17.5 0H19v-1h3.5zM11.5 5V1.5h1V5zm0 17.5V19h1v3.5zM6.746 7.404l-2.16-2.098l.695-.744l2.111 2.134zM18.72 19.438l-2.117-2.14l.652-.702l2.16 2.098zM16.596 6.746l2.098-2.16l.744.695l-2.134 2.111zM4.562 18.72l2.14-2.117l.663.652l-2.078 2.179zM12 12'></path></svg>
				{/* Moon Icon */}
				<svg xmlns='http://www.w3.org/2000/svg' width='32' height='32' viewBox='0 0 24 24' class='hidden h-[1.2rem] w-[1.2rem] rotate-90 scale-0 transition-all dark:block dark:rotate-0 dark:scale-100'><path fill='currentColor' d='M12.058 20q-3.334 0-5.667-2.333Q4.058 15.333 4.058 12q0-3.038 1.98-5.27Q8.02 4.5 10.942 4.097q.081 0 .159.006t.153.017q-.506.706-.801 1.57q-.295.865-.295 1.811q0 2.667 1.866 4.533q1.867 1.867 4.534 1.867q.952 0 1.813-.295q.862-.295 1.548-.801q.012.075.018.153q.005.078.005.158q-.384 2.923-2.615 4.904T12.057 20'></path></svg>
			</button>
		</nav>

		{/* --- Mobile Menu Toggle Button --- */}
		{/* Only visible below sm */}
		<button
			data-collapse-toggle="navbar-default"
			type="button"
			class="inline-flex items-center rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 sm:hidden dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
			aria-controls="navbar-default"
			aria-expanded="false"
		>
			<span class="sr-only">Open main menu</span>
			{/* Hamburger Icon SVG */}
			<svg class="h-6 w-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3 5h14a1 1 0 010 2H3a1 1 0 110-2zm0 4h14a1 1 0 010 2H3a1 1 0 110-2zm0 4h14a1 1 0 010 2H3a1 1 0 110-2z" clip-rule="evenodd"></path></svg>
		</button>
	</div>

	{/* --- Mobile Navigation Menu Container --- */}
	{/* This entire div is hidden on sm+ screens and toggled by JS on smaller screens */}
	{/* It sits *below* the top bar div */}
	<div class="hidden w-full sm:hidden" id="navbar-default">
		<ul class="mt-4 flex flex-col space-y-2 border-t border-gray-200 pt-4 dark:border-gray-700">
			{menuLinks.map(link => (
				<li>
					<a
						href={link.path}
						class="block rounded px-3 py-2 text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700"
					>
						{link.title}
					</a>
				</li>
			))}
			{/* Mobile Dark Mode Toggle (Optional - you could have one just for desktop) */}
			<li>
				<button
					id='toggleDarkModeMobile' {/* Changed ID */}
					class='relative mt-2 w-full rounded-md border border-gray-300 dark:border-gray-600 p-1.5 text-left transition-all hover:bg-gray-100 dark:hover:bg-gray-700'
				>
        <span class='sr-only'>Dark Theme</span>
				{/* Sun Icon */}
				<svg xmlns='http://www.w3.org/2000/svg' width='32' height='32' viewBox='0 0 24 24' class='h-[1.2rem] w-[1.2rem] rotate-0 scale-100 transition-all dark:hidden dark:-rotate-90 dark:scale-0'><path fill='currentColor' d='M12 15q1.25 0 2.125-.875T15 12q0-1.25-.875-2.125T12 9q-1.25 0-2.125.875T9 12q0 1.25.875 2.125T12 15m0 1q-1.671 0-2.836-1.164T8 12q0-1.671 1.164-2.836T12 8q1.671 0 2.836 1.164T16 12q0 1.671-1.164 2.836T12 16m-7-3.5H1.5v-1H5zm17.5 0H19v-1h3.5zM11.5 5V1.5h1V5zm0 17.5V19h1v3.5zM6.746 7.404l-2.16-2.098l.695-.744l2.111 2.134zM18.72 19.438l-2.117-2.14l.652-.702l2.16 2.098zM16.596 6.746l2.098-2.16l.744.695l-2.134 2.111zM4.562 18.72l2.14-2.117l.663.652l-2.078 2.179zM12 12'></path></svg>
				{/* Moon Icon */}
				<svg xmlns='http://www.w3.org/2000/svg' width='32' height='32' viewBox='0 0 24 24' class='hidden h-[1.2rem] w-[1.2rem] rotate-90 scale-0 transition-all dark:block dark:rotate-0 dark:scale-100'><path fill='currentColor' d='M12.058 20q-3.334 0-5.667-2.333Q4.058 15.333 4.058 12q0-3.038 1.98-5.27Q8.02 4.5 10.942 4.097q.081 0 .159.006t.153.017q-.506.706-.801 1.57q-.295.865-.295 1.811q0 2.667 1.866 4.533q1.867 1.867 4.534 1.867q.952 0 1.813-.295q.862-.295 1.548-.801q.012.075.018.153q.005.078.005.158q-.384 2.923-2.615 4.904T12.057 20'></path></svg>
        
      </button>
			</li>
		</ul>
	</div>
</header>

<script>
	function getCurrentTheme() {
		return localStorage.getItem('theme') ?? 'light'; // Provide default
	}

	function dispatchThemeChange() {
		const toggleDarkModeEvent = new CustomEvent('theme-change', {
			detail: { theme: getCurrentTheme() === 'light' ? 'dark' : 'light' }
		});
		document.dispatchEvent(toggleDarkModeEvent);
	}

	// --- Dark Mode Toggles ---
	const toggleDarkModeButtonDesktop = document.getElementById('toggleDarkModeDesktop');
	const toggleDarkModeButtonMobile = document.getElementById('toggleDarkModeMobile');

	toggleDarkModeButtonDesktop?.addEventListener('click', dispatchThemeChange);
	toggleDarkModeButtonMobile?.addEventListener('click', dispatchThemeChange);


	// --- Mobile Menu Toggle ---
	const mobileMenuButton = document.querySelector('[data-collapse-toggle="navbar-default"]');
	const mobileMenu = document.getElementById('navbar-default');

	mobileMenuButton?.addEventListener('click', () => {
		const isHidden = mobileMenu.classList.contains('hidden');
		mobileMenu.classList.toggle('hidden');
		// Update aria-expanded attribute for accessibility
		mobileMenuButton.setAttribute('aria-expanded', String(!isHidden));
	});

	// Optional: Close mobile menu if window is resized to desktop size
	window.addEventListener('resize', () => {
		if (window.innerWidth >= 640 && !mobileMenu.classList.contains('hidden')) { // 640px is default sm breakpoint
			mobileMenu.classList.add('hidden');
			mobileMenuButton.setAttribute('aria-expanded', 'false');
		}
	});
</script>